//- Slide Product
mixin slideProduct(controlLeft, controlRight, slideName, itemSlide, typeDevice)
    .product__slide-control
        input(id= controlLeft, type='radio', name= slideName checked)
        input(id= controlRight,type='radio', name= slideName)

        .slider-product
            .overflow
                .inner__content
                    case typeDevice
                        //- Mobile slide more item
                        when 'mobile-more'
                            - for(var i = 0 ; i < itemSlide.length / 3 ; i++)
                                .col.l-0.m-0.c-12
                                    +productDisplay(itemSlide[i].urlImg,itemSlide[i].type ,itemSlide[i].name, itemSlide[i].star,itemSlide[i].priceSale)
                                    +productDisplay(itemSlide[i+1].urlImg,itemSlide[i+1].type ,itemSlide[i+1].name, itemSlide[i+1].star,itemSlide[i+1].priceSale,itemSlide[i+1].priceCurrent)
                                    +productDisplay(itemSlide[i+2].urlImg,itemSlide[i+2].type ,itemSlide[i+2].name, itemSlide[i+2].star,itemSlide[i+2].priceSale,itemSlide[i+2].priceCurrent)

                        when 'latop-3-2'
                                - for(var i = 0 ; i < itemSlide.length / 6 ; i++)
                                    .col.l-12.m-12.c-12
                                        .row
                                            .col.l-4.m-6.c-12
                                                +productDisplay(itemSlide[i].urlImg,itemSlide[i].type ,itemSlide[i].name, itemSlide[i].star,itemSlide[i].priceSale)
                                            .col.l-4.m-6.c-0
                                                +productDisplay(itemSlide[i+1].urlImg,itemSlide[i+1].type ,itemSlide[i+1].name, itemSlide[i+1].star,itemSlide[i+1].priceSale,itemSlide[i+1].priceCurrent)
                                            .col.l-4.m-0.c-0
                                                +productDisplay(itemSlide[i+2].urlImg,itemSlide[i+2].type ,itemSlide[i+2].name, itemSlide[i+2].star,itemSlide[i+2].priceSale,itemSlide[i+2].priceCurrent)
                                        .row
                                            .col.l-4.m-6.c-0
                                                +productDisplay(itemSlide[i].urlImg,itemSlide[i].type ,itemSlide[i].name, itemSlide[i].star,itemSlide[i].priceSale)
                                            .col.l-4.m-6.c-0
                                                +productDisplay(itemSlide[i+1].urlImg,itemSlide[i+1].type ,itemSlide[i+1].name, itemSlide[i+1].star,itemSlide[i+1].priceSale,itemSlide[i+1].priceCurrent)
                                            .col.l-4.m-0.c-0
                                                +productDisplay(itemSlide[i+2].urlImg,itemSlide[i+2].type ,itemSlide[i+2].name, itemSlide[i+2].star,itemSlide[i+2].priceSale,itemSlide[i+2].priceCurrent)
                        when 'latop-4-2'
                            - for(var i = 0 ; i < itemSlide.length / 4 ; i++)
                                .col.l-12.m-12.c-12
                                    .row
                                        .col.l-3.m-6.c-12
                                            +productDisplay(itemSlide[i].urlImg,itemSlide[i].type ,itemSlide[i].name, itemSlide[i].star,itemSlide[i].priceSale)
                                        .col.l-3.m-6.c-0
                                            +productDisplay(itemSlide[i+1].urlImg,itemSlide[i+1].type ,itemSlide[i+1].name, itemSlide[i+1].star,itemSlide[i+1].priceSale,itemSlide[i+1].priceCurrent)
                                        .col.l-3.m-0.c-0
                                            +productDisplay(itemSlide[i+2].urlImg,itemSlide[i+2].type ,itemSlide[i+2].name, itemSlide[i+2].star,itemSlide[i+2].priceSale,itemSlide[i+2].priceCurrent)
                                        .col.l-3.m-0.c-0
                                            +productDisplay(itemSlide[i+2].urlImg,itemSlide[i+2].type ,itemSlide[i+2].name, itemSlide[i+2].star,itemSlide[i+2].priceSale,itemSlide[i+2].priceCurrent)
                                    .row
                                        .col.l-3.m-6.c-0
                                            +productDisplay(itemSlide[i].urlImg,itemSlide[i].type ,itemSlide[i].name, itemSlide[i].star,itemSlide[i].priceSale)
                                        .col.l-3.m-6.c-0
                                            +productDisplay(itemSlide[i+1].urlImg,itemSlide[i+1].type ,itemSlide[i+1].name, itemSlide[i+1].star,itemSlide[i+1].priceSale,itemSlide[i+1].priceCurrent)
                                        .col.l-3.m-0.c-0
                                            +productDisplay(itemSlide[i+2].urlImg,itemSlide[i+2].type ,itemSlide[i+2].name, itemSlide[i+2].star,itemSlide[i+2].priceSale,itemSlide[i+2].priceCurrent)
                                        .col.l-3.m-0.c-0
                                            +productDisplay(itemSlide[i+2].urlImg,itemSlide[i+2].type ,itemSlide[i+2].name, itemSlide[i+2].star,itemSlide[i+2].priceSale,itemSlide[i+2].priceCurrent)

                        //- Laptop 4-1
                        default
                            each item in itemSlide
                                .col.l-3.m-6.c-12
                                    +productDisplay(item.urlImg,item.type ,item.name, item.star,item.priceSale)

mixin banner(urlImg, altImg)
    .banner
        img(src= urlImg, alt= altImg)

//- Form Control
mixin formHeader(title)
    h1.form__header= title

mixin formControl(type, content, className, id, name, placeholder, require)
    .form__group
        label.form__label(for= id, tooltip-required= require)= content
        input(id= id, class= className, rules='required', type= type, name= name, placeholder= placeholder required)
        span.form-message