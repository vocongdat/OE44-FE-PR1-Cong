                a.social__icon-link(class= icon, href="#")

//- Carousel
mixin sliderBanner(headerSub, header, des, url)
    .slider-item
        .text-content
            h1.text-heading_sub= headerSub 
            h2.text-heading= header
            p.text-description= des
            a.btn.btn--detail(href= url) Xem chi tiết 

//- Breadcrumbs
mixin breadcrumbs(navigationList)
    .grid.wide 
        .row 
            .col.l-12.m-12.c-12
                .breadcrumbs
                    a.breadcrumbs__link(href="/")
                        span.breadcrumbs__home Home /
                    each  link, navigation  in  navigationList
                        a.breadcrumbs__link(href= link)
                            span.breadcrumbs__navigation= `${navigation}`
//- Show Product
mixin productDisplay(urlImg, productType, productName, rateStar, priceSale, priceCurrent, productDsc, _id)
    .product
        .product__header
            .product__header-img
                img(src= `./assets/img/product/${urlImg}`, alt= productName)
            if productType != ''
                if productType == 'new'
                    span= productType
                else 
                    span(style='background-color: #d64146;')= `- ${productType}%`
            .form__control
                a.btn.btn__buy-now(href="cart.html") Mua ngay
                a.icon__link-search(href="products-detail.html")
                    i.fas.fa-search.icon.icon--detail
        .product__body 
            p.product__name= productName

            span.product__star
                - for (var i = 0; i< rateStar; i++)
                    if rateStar - i < 1
                        i.fas.fa-star-half-alt
                    else 
                        i.fas.fa-star
            p.product__dsc= productDsc

            .product__price
                span.product__price-sale=`${priceSale}.000 đ`
                if priceCurrent
                    span.product__price-current=`${priceCurrent}.000 đ`

            .product__control
                a.btn.btn__buy-now(href="cart.html") Mua ngay

                a(href="products-detail.html")
                    i.fas.fa-search.icon.icon--detail.icon--border

                input(id= _id, type="checkbox", name= productName)
                label.item__heart-label(for= _id)
                    i.fas.fa-heart.icon.icon--border

//- News
mixin news(urlImg, time, header, dsc)
    .news_wrap
